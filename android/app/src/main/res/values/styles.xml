<resources xmlns:tools="http://schemas.android.com/tools">
  <style name="Theme.DNSChat.DynamicMaterial" parent="Theme.Material3.DynamicColors.DayNight">
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:navigationBarColor">@android:color/transparent</item>
    <item name="android:windowLightStatusBar">@bool/is_light_theme</item>
    <item name="android:windowLightNavigationBar">@bool/is_light_theme</item>
    <item name="android:windowTranslucentStatus">false</item>
    <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    <item name="android:forceDarkAllowed">false</item>
  </style>

  <style name="AppTheme" parent="Theme.DNSChat.DynamicMaterial">
    <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
    <item name="colorPrimary">@color/md_theme_light_primary</item>
    <item name="colorPrimaryDark">@color/md_theme_dark_primary</item>
    <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
    <item name="colorSurface">@color/md_theme_light_surface</item>
    <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
  </style>

  <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
    <item name="windowSplashScreenBackground">@color/splashscreen_background</item>
    <item name="windowSplashScreenAnimatedIcon">@drawable/splashscreen_logo</item>
    <item name="postSplashScreenTheme">@style/AppTheme</item>
    <item name="android:windowSplashScreenBehavior">icon_preferred</item>
  </style>
</resources>