{
  "name": "chat-dns",
  "version": "2.5",
  "description": "DNSChat - A React Native chat app using DNS TXT queries",
  "main": "index.tsx",
  "author": "mvneves",
  "license": "MIT",
  "homepage": "https://github.com/mneves75/dnschat",
  "scripts": {
    "start": "expo start --dev-client",
    "web": "expo start --web",
    "android": "JAVA_HOME=/opt/homebrew/opt/openjdk@17/libexec/openjdk.jdk/Contents/Home PATH=/opt/homebrew/opt/openjdk@17/bin:$PATH expo run:android",
    "android:java24": "expo run:android",
    "ios": "expo run:ios",
    "sync-versions": "node scripts/sync-versions.js",
    "sync-versions:dry": "node scripts/sync-versions.js --dry-run",
    "fix-pods": "scripts/fix-cocoapods.sh",
    "clean-ios": "cd ios && rm -rf Pods/ Podfile.lock build/ && pod install",
    "test": "jest --runInBand",
    "dns:harness": "ts-node scripts/run-dns-harness.ts"
  },
  "dependencies": {
    "@expo/metro-runtime": "~6.1.2",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-navigation/bottom-tabs": "^7.1.1",
    "@react-navigation/elements": "^2.2.3",
    "@react-navigation/native": "^7.0.12",
    "@react-navigation/native-stack": "^7.1.13",
    "@shopify/flash-list": "2.0.2",
    "@types/dns-packet": "^5.6.5",
    "date-fns": "^4.1.0",
    "dns-packet": "^5.6.1",
    "expo": "54.0.15",
    "expo-asset": "~12.0.9",
    "expo-build-properties": "~1.0.9",
    "expo-dev-client": "~6.0.15",
    "expo-glass-effect": "^0.1.4",
    "expo-linking": "~8.0.8",
    "expo-localization": "~17.0.7",
    "expo-router": "~6.0.13",
    "expo-splash-screen": "~31.0.10",
    "expo-system-ui": "~6.0.7",
    "playwright": "^1.55.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.4",
    "react-native-bottom-tabs": "^0.10.0",
    "react-native-device-info": "^14.0.4",
    "react-native-edge-to-edge": "1.6.0",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-markdown-display": "^7.0.2",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-tcp-socket": "^6.3.0",
    "react-native-udp": "^4.1.7",
    "react-native-uuid": "^2.0.3",
    "react-native-web": "^0.21.0",
    "react-native-worklets": "0.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/jest": "^29.5.12",
    "@types/react": "~19.1.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2"
  },
  "overrides": {
    "markdown-it": ">=12.3.2"
  },
  "expo": {
    "doctor": {
      "reactNativeDirectoryCheck": {
        "exclude": [
          "react-native-udp",
          "react-native-tcp-socket",
          "@dnschat/dns-native"
        ],
        "listUnknownPackages": true
      }
    }
  },
  "private": true
}
